<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" style="-fx-background-color: #ffd8cf;" VBox.vgrow="ALWAYS">
         <children>
            <HBox layoutX="80.0" layoutY="32.0" prefHeight="337.0" prefWidth="483.0">
               <children>
                  <!--<Pane prefHeight="337.0" prefWidth="249.0" style="-fx-background-color: lightgrey; -fx-border-color: black;" />-->
                   <TextArea fx:id="editedFileContentLabel" prefHeight="337.0" prefWidth="256.0" style="-fx-background-color: lightgrey; -fx-border-color: black;" editable="false" HBox.hgrow="ALWAYS"/>
                   <!--<Pane layoutX="10.0" layoutY="10.0" prefHeight="337.0" prefWidth="256.0" style="-fx-background-color: lightgrey; -fx-border-color: black;" />-->
                    <TextArea fx:id="originalFileContentLabel" prefHeight="337.0" prefWidth="256.0" style="-fx-background-color: lightgrey; -fx-border-color: black;" editable="false" HBox.hgrow="ALWAYS"/>
                </children>
             </HBox>
             <VBox layoutX="14.0" layoutY="21.0" prefHeight="121.0" prefWidth="41.0">
                <children>
                   <Button fx:id="editButton" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" mnemonicParsing="false" prefHeight="41.0" prefWidth="61.0" style="-fx-background-color: #ffd8cf;" VBox.vgrow="ALWAYS">
                      <graphic>
                         <ImageView fitHeight="51.0" fitWidth="34.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" translateX="5.0">
                            <image>
                               <Image url="@editing.png" />
                            </image>
                            <viewport>
                               <Rectangle2D />
                            </viewport>
                         </ImageView>
                      </graphic>
                   </Button>
                   <Button fx:id="deleteButton" mnemonicParsing="false" prefHeight="23.0" prefWidth="30.0" style="-fx-background-color: #ffd8cf;" VBox.vgrow="ALWAYS">
                      <graphic>
                         <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" translateX="2.0">
                            <image>
                               <Image url="@delete.png" />
                            </image>
                         </ImageView>
                      </graphic></Button>
                   <Button fx:id="commentButton" mnemonicParsing="false" prefHeight="87.0" prefWidth="63.0" style="-fx-background-color: #ffd8cf;" VBox.vgrow="ALWAYS">
                      <graphic>
                         <ImageView fitHeight="38.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true" translateX="2.0">
                            <image>
                               <Image url="@chat.png" />
                            </image>
                         </ImageView>
                      </graphic></Button>
                </children>
             </VBox>
             <VBox layoutX="570.0" layoutY="14.0" prefHeight="101.0" prefWidth="42.0">
                <children>
                   <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveButtonClic" prefHeight="40.0" prefWidth="36.0" style="-fx-background-color: #ffd8cf;" VBox.vgrow="ALWAYS">
                    <graphic>
                       <ImageView fitHeight="41.0" fitWidth="39.0" pickOnBounds="true" preserveRatio="true">
                          <image>
                             <Image url="@save-instagram.png" />
                          </image>
                       </ImageView>
                    </graphic>
                 </Button>
                 <Button fx:id="downloadButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="36.0" style="-fx-background-color: #ffd8cf;" visible="false" VBox.vgrow="ALWAYS">
                  <graphic>
                     <ImageView fitHeight="32.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true" translateX="4.0" translateY="5.0">
                         <image>
                                <Image url="@downloads.png" />
                              </image>
                              </ImageView>
                           </graphic></Button>
                     </children>
                  </VBox>
               </children>
          </AnchorPane>
        </children>
